<mjml>
  <mj-head>
    <mj-attributes>
      <mj-all width="320px"/>-
      <!--<mj-all padding='0'/>-->
      <mj-body/>
    </mj-attributes>
    <mj-style>

      .header-container {
        display: flex;
        align-items: center;
        word-wrap: break-word;
      }

      .header-wc {
        display: flex;
        word-wrap: break-word;
      }

      .divider-container {
        /*border-top: 1px solid #F85057;*/
        display: flex;
        align-items: center;
        background-color: #E5E5E5;
        word-wrap: break-word;
      }

      .content-text-container {
        display: flex;
        border: 1px solid #0404FF;
        -moz-border-radius: 50%;
        border-radius: 50%;
        background-color: #E5E5E5;
        box-shadow: 0px 0px 10px 0px #0404FF;

        white-space: normal;
        overflow: hidden;
        text-overflow: ellipsis;
        word-wrap: break-word;
        margin-top: 4px;
      }

      p.welcome {
        text-shadow: 0px 0px 7px #0404FF;
        word-break: break-all;
        font-size: 56px;
      }

      .header {
        background-color: #E5E5E5;
      }
      p.header {
        font-size: 20px;
        color: #000000;
        line-height: 26px;
      }

      .footer {
        background-color: #0404FF;
      }
      p.footer {
        display: inline-block;
      }

      p {
        text-align: center;
        line-height: 20px;
        /*line-height: 1.25;*/
      }

      a.cc {
        color: #000000;
        outline: none;
        text-decoration: none;
      }

      a.cc:link {
        color: #000000;
        text-decoration: none;
      }
      a.cc:visited {
        text-decoration: none;
      }
      a.cc:hover {
        color: hotpink;
      }
      a.cc:active {
        color: hotpink;
      }

      a.fl {
        color: #FFFFFF;
        outline: none;
        text-decoration: none;
      }

      a.fl:link {
        color: #FFFFFF;
        text-decoration: none;
      }
      a.fl:visited {
        text-decoration: none;
      }
      a.fl:hover {
        /*text-decoration: underline;*/
        color: hotpink;
      }
      a.fl:active {
        /*text-decoration: underline;*/
        color: hotpink;
      }
    </mj-style>
  </mj-head>

  <mj-body background-color="#FFFFFF">
    <mj-section css-class="divider-container" background-color="#E5E5E5">
      <mj-raw>
        <!--header-->
      </mj-raw>
      <mj-column css-class="header" width="100%">
        <mj-text align="center" font-size="13px" font-family="Eskos">
          OUTPUT FIELD
        </mj-text>

      </mj-column>
      <mj-column css-class="header" width="100%">
        <mj-text align="center" font-family="EditorialNew-Regular" padding-top="32px">
          <p class="welcome">Welcome</p>
        </mj-text>
      </mj-column>
      <mj-column css-class="header" width="100%">
        <mj-text align="center" font-size="13px" font-family="neue-haas-unica-proregular">
          <span style="color: #0404FF">THANK YOU</span> FOR SIGNING UP <br> AND JOINING OUR MISSION
        </mj-text>
      </mj-column>
    </mj-section>

    <mj-include path="./components/content.mjml" />

    <mj-section css-class="divider-container" padding-bottom='0' padding-top='40px'>
      <mj-raw>
        <!--footer-->
      </mj-raw>
      <mj-column css-class="footer" width="100%">
        <mj-text align="center" color="#FFFFFF" font-size="13px" font-family="neue-haas-unica-proregular">
          FOLLOW US ON INSTAGRAM<a href="https://www.instagram.com/output.field/" class="fl"> @OUTPUT.FIELD</a>
        </mj-text>
      </mj-column>
    </mj-section>

  </mj-body>
</mjml>
